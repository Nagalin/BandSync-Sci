datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id         String      @id @default(uuid()) //uuid
  eventName  String      @unique
  eventDate  DateTime
  startTime  String
  endTime    String
  dressCode  String?
  status     Status  @default(UPCOMING)
}

enum Status {
  UPCOMING
  ONGOING
  COMPLETED
}


