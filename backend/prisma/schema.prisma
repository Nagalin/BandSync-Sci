datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id         String      @id @default(uuid()) //uuid
  eventName  String      @unique
  eventDate  DateTime
  startTime  DateTime
  endTime    DateTime
  dressCode  String
  status     Status  @default(UPCOMING)
  additionalDetails String?
}

enum Status {
  UPCOMING
  ONGOING
  COMPLETED
}

model Song {
  id                String    @id @default(uuid())
  songName          String    @unique
  songDescription   String?
  songOrder         Int       @default(1)
  songKey           key
  songReference     String
  songVocalist      Int? 
  songGuitarist     Int?
  songDrummer       Int?
  songBassist       Int?
  songKeyboardist   Int?
  songExtra         Int?
  songPercussionist Int?
}

enum key {
  C
  CSharp
  Db
  D
  DSharp
  Eb
  E
  F
  FSharp
  Gb
  G
  GSharp
  Ab
  A
  ASharp
  Bb
  b
}
