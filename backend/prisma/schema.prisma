datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id         String      @id @default(uuid()) //uuid
  eventName  String      @unique
  eventDate  DateTime
  startTime  DateTime
  endTime    DateTime
  dressCode  String
  status     Status  @default(UPCOMING)
  additionalDetails String 
  songs     Song[] 
}

enum Status {
  UPCOMING
  ONGOING
  COMPLETED
}

model Song {
  id               String    @id @default(uuid())
  songName          String    
  songDescription   String
  songOrder         Int       @default(1)
  songKey           String
  songReference     String
  songVocalist      Int       @default(0)
  songGuitarist     Int       @default(0)
  songDrummer       Int       @default(0)
  songBassist       Int       @default(0)
  songKeyboardist   Int       @default(0)
  songExtra         Int       @default(0)
  songPercussionist Int       @default(0)
  eventId           String
  event             Event    @relation(fields: [eventId], references: [id])
}



